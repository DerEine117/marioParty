<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="400.0" maxWidth="600.0" minHeight="400.0" minWidth="711.0" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.rknabe.marioparty.game2.Game2Controller">
   <children>
      <VBox layoutX="17.0" layoutY="47.0" prefHeight="215.0" prefWidth="100.0">
         <children>
            <Label alignment="BASELINE_LEFT" text="Your Score:">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
            <Label fx:id="playerScore" text="0" />
            <Label text="Opponents Score:">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
            <Label fx:id="computerScore" text="0" />
            <Label prefHeight="17.0" prefWidth="141.0" text="Balloons Left:">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
            <Label fx:id="balloonsLeft" text="50" />
            <Button fx:id="startGame" mnemonicParsing="false" onAction="#startGameClick" text="start" />
            <Button fx:id="reset" mnemonicParsing="false" onAction="#resetClick" text="reset" />
            <Button fx:id="backToMenu" mnemonicParsing="false" onAction="#backToMenuClick" prefHeight="26.0" prefWidth="103.0" text="back to menu" />
         </children>
      </VBox>
      <VBox layoutX="162.0" layoutY="32.0" prefHeight="370.0" prefWidth="550.0">
         <children>
            <Canvas fx:id="gameCanvas" height="370.0" layoutY="400.0" nodeOrientation="INHERIT" width="550.0" />
         </children>
      </VBox>
      <HBox layoutX="-8.0" prefHeight="45.0" prefWidth="711.0" rotate="180.0">
         <children>
            <ImageView fx:id="imageView1" fitHeight="45.0" fitWidth="180.0" pickOnBounds="true" preserveRatio="true" />
            <ImageView fx:id="imageView2" fitHeight="45.0" fitWidth="180.0" pickOnBounds="true" preserveRatio="true" />
            <ImageView fx:id="imageView3" fitHeight="45.0" fitWidth="180.0" pickOnBounds="true" preserveRatio="true" />
            <ImageView fx:id="imageView4" fitHeight="45.0" fitWidth="180.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </HBox>
   </children>
</AnchorPane>
